@page "/lights"

@using NDiscoKit.Components.Layout
@using NDiscoKit.Components.Lights
@using NDiscoKit.CustomIcons

<MudExpansionPanels Class="mt-7 pb-7" MultiExpansion>
    <CustomExpansionPanel Title="Overview" BoldTitle Icon="@(Icons.Material.Rounded.Dashboard)" Expanded="true">
        <LightsOverview />
    </CustomExpansionPanel>
    <CustomExpansionPanel Title="Philips Hue" Icon="@(HueIcons.Logo)" ExpandedChanged="PhilipsMenuOpenedChanged">
        @if (philipsComponentCreate)
        {
            <LightsHueBridges />
        }
    </CustomExpansionPanel>
</MudExpansionPanels>